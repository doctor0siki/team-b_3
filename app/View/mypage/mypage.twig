{#レイアウトを継承します#}
{% extends "layout/layout.twig" %}

{#HTMLのタイトルを定義します。#}
{% block title %}{{ result.name }}My Page{% endblock %}

{# このページに適用させたいスタイルシートを指定します #}
{% block header_scripts_add %}
<style>
@media(min-width:768px){
  .mypage_image{
    border-radius: 50%;
    width: 100%;
  }
  .mypage_info{
    font-size: 20px;
  }
}
@media(max-width:767px){
  .mypage_image{
    border-radius: 50%;
    width: 100%;
  }
  .col-md-2{
    flex:1;
  }
  .col-md-10{
    flex: 1;
  }
  .mypage_info{
    font-size: 4vw;
  }
}
.row{
  align-items: center;
}
</style>
{% endblock %}

{#ここから表示したい情報を記載します。#}
{% block page_content %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-sm-12">
            <br><h4><i class="fa fa-user-circle" aria-hidden="true"></i> MY page</h4>
    <div>
      <div class="row" style="margin: 2vw 0;">
          <div class="col-md-2">
              <img class="mypage_image" src="{{ profile.img }}" alt="{{ profile.user_set_name }} さん">
          </div>
          <p class="col-md-10 mypage_info">
              <i class="fas fa-user"></i> {{ profile.user_set_name }} さん<br>
              <i class="fas fa-globe"></i> {{ profile.location }} <br>
              <i class="fas fa-birthday-cake"></i> {{ profile.birthday | date("Y年m月d日") }}
          </p>
      </div>
      <br>
      <h5 class="text-warning">私のエンディングノート <span class="badge badge-secondary"><i class="fas fa-pray" aria-hidden="true"></i> {{ my_ending_note.favorite }}</span></h5>

    <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="fas fa-history" aria-hidden="true"></i> 人生の歴史</h4>
              <p class="card-text">{{ my_ending_note.my_history }}</p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="fas fa-user-friends" aria-hidden="true"></i> 親族や友人知人</h4>
              <p class="card-text">{{ my_ending_note.my_friends_relatives }}</p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="fa fa-home" aria-hidden="true"></i> 財産</h4>
              <p class="card-text">{{ my_ending_note.my_property }}</p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="fa fa-hospital-o" aria-hidden="true"></i> 終末期の介護や医療に関する要望</h4>
              <p class="card-text">{{ my_ending_note.my_desire }}</p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="far fa-comment"　aria-hidden="true"></i> 葬儀に関する要望</h4>
              <p class="card-text">{{ my_ending_note.my_funeral }}</p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h4 class="text-warning card-title"><i class="fas fa-info-circle" aria-hidden="true"></i> その他</h4>
                {% if my_ending_note.my_comment %}
                  <p class="card-text">{{ my_ending_note.my_comment }}</p>
                {% else %}
                  <p class="card-text">特になし。</p>
                {% endif %}
            </div>
          </div>
        </div>
      </div>
      <br>
      <button type="button" class="btn btn-outline-warning">
        <a href="my-ending-note/edit/" style="text-decoration: none;">エンディングノートを編集</a>
      </button>
      <button type="button" class="btn btn-outline-warning">
        <a href="/profile_edit/" style="text-decoration: none;">プロフィールを変更</a>
      </button>
    </div>
  </div>
</div>
{% endblock %}

{#共通フッタとして追記したい情報を記載します。#}
{% block footer_scripts_add %}{% endblock %}
